# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET           /backend/friend/:id        @controllers.Application.selectOneFriend(id : Long)
DELETE        /backend/friend/:id        @controllers.Application.deleteOneFriend(id : Long)
GET           /backend/friends           @controllers.Application.selectAllFriends()
PUT           /backend/friend/:id        @controllers.Application.addOneFriend(id : Long)
# update one !


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
